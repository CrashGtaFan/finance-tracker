<table class='table table-striped'>
  <thead>
    <tr>
      <th colspan='3' class='page-header'>
        <h2>My Friends</h2>
      </th>
    </tr>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th colspan='2'>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friendships.each do |friend| %>
      <tr>
        <td><%= friend.full_name %></td>
        <td><%= friend.email %></td>
        <td>
          <%= link_to 'View profile', user_path(friend), class: 'btn btn-xs btn-info' %>
        </td>
        <td>
          <%= link_to 'Delete from friends', friendship_path(friend), method: :delete,
            data: { confirm: 'Are you gonna destroy that friend' }, class: 'btn btn-xs btn-danger'
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
