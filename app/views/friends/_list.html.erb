<table class='table table-striped'>
  <thead>
    <tr>
      <th colspan='3' class='page-header'>
        <h2>My Friends</h2>
      </th>
    </tr>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @friendships.each do |friend| %>
      <tr>
        <td><%= friend.full_name %></td>
        <td><%= friend.email %></td>
        <td>
          <div class="dropdown">
            <button class="btn btn-xs btn-warning dropdown-toggle" type="button" data-toggle="dropdown">Actions
            <span class="caret"></span></button>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'View profile', user_path(friend) %>
              </li>
              <li>
                <%= link_to 'Delete from friends', friendship_path(friend), method: :delete,
                  data: { confirm: 'Are you gonna destroy that friend' }
                %>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
